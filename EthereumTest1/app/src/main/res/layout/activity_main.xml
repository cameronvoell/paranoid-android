<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cameron.ethereumtest1.activities.MainActivity">

    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentLeft="true"
            android:background="@android:color/holo_green_light"
            android:orientation="vertical"
            android:onClick="openAccountInfo">

            <TextView
                android:id="@+id/accountInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Account: ?"/>

            <TextView
                android:id="@+id/lockLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/accountInfo"
                android:layout_alignParentLeft="true"
                android:text="Lock status: "/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/accountInfo"
                android:src="@android:drawable/ic_lock_lock"
                android:tint="@android:color/darker_gray"
                android:backgroundTint="@android:color/holo_green_light"
                android:background="@android:color/holo_green_light"
                android:layout_toRightOf="@id/lockLabel"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_green_light"
            android:orientation="vertical"
            android:onClick="openNetworkSynch">

            <TextView
                android:id="@+id/networkInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network: RINKEBY"/>

            <TextView
                android:id="@+id/synchInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block: loading..."/>

        </LinearLayout>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/ic_paranoid_android"
            android:layout_centerInParent="true"
            android:onClick="reloadFeed"/>

    </RelativeLayout>

    <!--<TextView
        android:id="@+id/fetchResponse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBar"/>-->
    <fragment android:name="com.example.cameron.ethereumtest1.activities.ContentListFragment"
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBar"/>

    <LinearLayout
        android:id="@+id/networkSynch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusBar"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:onClick="closeNetworkSynch"/>
        <TextView
            android:id="@+id/synchLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@android:color/white"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/accountPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusBar"
        android:background="@android:color/darker_gray"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/closeAccountPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:onClick="closeAccountPage"/>

        <TextView
            android:id="@+id/accountList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textIsSelectable="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@android:color/white"
            android:layout_below="@id/closeAccountPage"/>

        <Button
            android:id="@+id/createAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/accountList"
            android:text="new account"
            android:onClick="createAccount"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:elevation="6dp"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/black"
        android:onClick="postToSlushPile"/>

</RelativeLayout>
