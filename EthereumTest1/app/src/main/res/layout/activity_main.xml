        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:onClick="openAccountInfo">

            <ImageButton
                android:id="@+id/lock"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:paddingBottom="12dp"
                android:layout_centerInParent="true"
                android:src="@android:drawable/ic_lock_lock"
                android:background="@android:color/transparent"
                android:tint="@android:color/white"
                android:onClick="openAccountInfo"/>

            <TextView
                android:id="@+id/accountInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:textSize="10dp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:text="Account: ?"
                android:onClick="openAccountInfo"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp">

            <ImageView
                android:id="@+id/moon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:src="@mipmap/ic_moon"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:onClick="openNetworkSynch"/>

            <TextView
                android:id="@+id/synchInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/moon"
                android:shadowColor="@android:color/black"
                android:shadowRadius="10"
                android:shadowDy="5"
                android:shadowDx="5"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:text="synching..."/>

        </RelativeLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/selector"
        android:layout_below="@id/statusBar"/>

    <LinearLayout
        android:id="@+id/networkSynch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusBar"
        android:layout_above="@+id/selector"
        android:background="@android:color/darker_gray"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:onClick="closeNetworkSynch"/>
        <TextView
            android:id="@+id/synchLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/accountPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusBar"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/closeAccountPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:onClick="closeAccountPage"/>

        <TextView
            android:id="@+id/accountList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textIsSelectable="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@android:color/white"
            android:layout_below="@id/closeAccountPage"/>

        <Button
            android:id="@+id/createAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/accountList"
            android:text="new account"
            android:onClick="createAccount"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@id/selector"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/carInterior"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_content_list"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:tint="@android:color/white"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_content_list"
            android:scaleType="fitCenter"
            android:onClick="showContentList"/>

        <ImageButton
            android:id="@+id/button_contract_list"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:tint="@android:color/darker_gray"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_newspaper"
            android:scaleType="fitCenter"
            android:onClick="showContentContracts"/>

        <ImageButton
            android:id="@+id/user_fragment_button"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:tint="@android:color/darker_gray"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_account"
            android:scaleType="fitCenter"
            android:onClick="showUserFragment"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_alignParentRight="true"
        app:backgroundTint="@android:color/white"
        android:tint="@color/carInterior"
        android:layout_above="@id/selector"
        android:layout_margin="16dp"
        android:src="@drawable/ic_pencil"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:onClick="createNewContent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_alignParentRight="true"
        app:backgroundTint="@android:color/white"
        android:layout_above="@id/selector"
        android:layout_margin="16dp"
        android:src="@drawable/ic_publication"
        android:scaleType="center"
        android:tint="@color/carInterior"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:onClick="reloadFeed"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_alignParentRight="true"
        android:layout_above="@id/selector"
        android:layout_margin="16dp"
        android:src="@drawable/ic_account_edit"
        android:tint="@color/carInterior"
        app:backgroundTint="@android:color/white"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:onClick="updateMetaData"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_alignParentRight="true"
        app:backgroundTint="@android:color/darker_gray"
        android:tint="@color/carInterior"
        android:src="@drawable/ic_steer_color"
        android:scaleType="center"
        android:layout_above="@id/selector"
        android:layout_margin="12dp"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:onClick="animateFabMenu"/>

</RelativeLayout>
